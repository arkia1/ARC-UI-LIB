{
  "compilerOptions": {
    /* Base Options */
    "target": "es2020",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "isolatedModules": true,

    /* Strictness and Type Checking */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    /* Project Structure */
    "outDir": "./dist",
    "baseUrl": ".",

    /* JSX Support */
    "jsx": "react-jsx",

    /* Library-specific Options */
    "declaration": true,
    "declarationDir": "./dist/types",
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "components/**/*.ts",
    "components/**/*.tsx",
    "lib/**/*.ts",
    "types/**/*.d.ts",
    "cli/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", "**/*.stories.tsx", "**/*.test.tsx"]
}
